{
	"name": "sveltekit-tanstack-electric",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "drizzle-kit generate && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"backend:up": "PROJECT_NAME=sveltekit-tanstack-electric pnpm run example-backend:up && pnpm run migrate",
		"backend:down": "PROJECT_NAME=sveltekit-tanstack-electric pnpm run example-backend:down",
		"backend:clear": "pnpm run  backend:down && pnpm run  backend:up",
		"example-backend:up": "dotenv -e .env.dev -- docker compose -f ./.support/docker-compose.yml up -d",
		"example-backend:down": "dotenv  -e .env.dev -- docker compose -f .support/docker-compose.yml down --volumes",
		"generate": "drizzle-kit generate",
		"migrate": "drizzle-kit migrate",
		"prepare": "husky",
		"studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@flydotio/dockerfile": "^0.5.9",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/adapter-node": "^5.2.6",
		"@sveltejs/kit": "^2.7.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/typography": "^0.5.15",
		"@tanstack/svelte-query-devtools": "^5.59.13",
		"@types/eslint": "^9.6.1",
		"@types/pg": "^8.11.10",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.5",
		"dotenv-cli": "^7.4.2",
		"drizzle-kit": "^0.26.2",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"globals": "^15.11.0",
		"husky": "^9.1.6",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^3.4.13",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.8.1",
		"vite": "^5.4.8"
	},
	"type": "module",
	"dependencies": {
		"@electric-sql/client": "^0.6.4",
		"@tanstack/svelte-query": "^5.59.13",
		"bits-ui": "^0.21.16",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.35.3",
		"drizzle-zod": "^0.5.1",
		"formsnap": "^1.0.1",
		"lucide-svelte": "^0.452.0",
		"mode-watcher": "^0.4.1",
		"postgres": "^3.4.4",
		"svelte-radix": "^1.1.1",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.19.1",
		"tailwind-merge": "^2.5.3",
		"tailwind-variants": "^0.2.1",
		"uuid": "^10.0.0",
		"zod": "^3.23.8"
	}
}
